#/bin/bash
    echo "rewriting /etc/mailname"
    DOMAIN=$(dnsdomainname)
    if [ ! -z "${DOMAIN}" ]; then
        HNAME=$(hostname -s);
        FQDN=$(hostname -f);
        DOMAIN=$(echo $FQDN|sed -e "s/${HNAME}\.//")
    fi
    if [ ! -z "${DOMAIN}" ]; then
        echo "Setting mail name to ${DOMAIN}";
        echo "${DOMAIN}" > /etc/mailname
    else
        echo "unable to determine domain name in fix_etc_mailname.";
        exit -1;
    fi
